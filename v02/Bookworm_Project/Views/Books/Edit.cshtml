@model BookModel
@{ 
    ViewData["Title"] = "Edit Book";
}
<div class="ui center aligned container" style=" margin-top:40px;">
    <div class="ui inverted segment">
        <form class="ui inverted form" asp-action="edit" method="post">

            <div class="two fields">
                <div class="field">
                    <label asp-for="Cover">Cover</label>
                    <input asp-for="Cover" placeholder="Image URL">
                </div>
                <div class="field">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" placeholder="Book Title">
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label asp-for="AuthorId">Author</label>
                    <input asp-for="AuthorId" placeholder="Author ID">
                </div>
                <div class="field">
                    <label asp-for="Id">ID</label>
                    <input asp-for="Id" placeholder="Image URL" disabled>
                </div>
            </div>
            <div class="field">
                <label asp-for="Description"></label>
                <input asp-for="Description" placeholder="Image URL">
            </div>
            <button class="ui submit button" type="submit">EDIT</button>
        </form>
    </div>
</div>
